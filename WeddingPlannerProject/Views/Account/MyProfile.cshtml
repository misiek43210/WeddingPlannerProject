@using Microsoft.AspNet.Identity
@model WeddingPlannerProject.Models.MyProfileViewModel
@{
    ViewBag.Title = "MyProfile";
}

<div class="container" style="padding-top:2em">
    <div class="panel panel-default settings col-sm-5 basisInfoMargin" style="height:200px;">
        <h3 class="text-center">Podstawowe informacje</h3>
        <div class="panel-body">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Email</th>
                        <th>Poziom</th>
                    </tr>
                </thead>
                <tr>
                    <td>@Model.AppUser.FirstName</td>
                    <td>@Model.AppUser.LastName</td>
                    <td>@Model.AppUser.Email</td>
                    <td><span class="label label-info">Super Użytkownik</span></td>
                </tr>
            </table>
            <button class="btn btn-info">Edytuj dane</button>
        </div>
    </div>

    <div class="panel panel-default settings col-sm-5 col-sm-offset-2 basisInfoMargin" style="height:200px">
        <div class="panel-body">
            <h1 class="text-center">
                @Html.ActionLink("Moje zadania", "MyTasks", "Task")
            </h1>
            <hr />
            <h4>Przechodzac do tej zakladki mozesz dodawac, edytowac i usuwac swoje zadania zwiazane z Twoim weselem!</h4>
        </div>
    </div>
</div>
<div class="container" style="margin-top:20px">
    <div class="panel panel-default col-sm-12">
        <h2 class="text-center text-info">Moje Wesele</h2>
        <div class="panel-body">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Liczba gosci</th>
                        <th>Lokalizacja</th>
                        <th>Oferta</th>
                    </tr>
                </thead>
                <tr>
                    <td>@Model.Wedding.Date</td>
                    <td>@Model.Wedding.NumberOfGuests</td>
                    <td>@Model.Wedding.LocationOfWedding</td>
                    <td>
                        @foreach (var item in Model.WeddingOffer)
                        {
                            @item.Offer_Id
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>

</div>