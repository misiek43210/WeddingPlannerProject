@model IEnumerable<WeddingPlannerProject.Models.OfferViewModel>
@{
    ViewBag.Title = "Offer";
}

<h2 class="text-center text-info">Nasza Oferta</h2>


<div class="col-sm-12" style="margin-top:50px;">
    @foreach (var offer in Model)
    {
        <div class="well">
            <h3>
                <strong>
                    @offer.Name
                </strong>
                <span class="pull-right label label-primary">@offer.Salary zł</span>
            </h3>
            <span class="lead">@offer.Description</span>
        </div>
    }
</div>

