@model WeddingPlannerProject.Models.WeddingOfferViewModel


<div class="panel-body">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>L.p</th>
                <th>Opis</th>
                <th>Cena</th>
                <th>Wybierz</th>
            </tr>
        </thead>
        @foreach (var offer in Model.Offer)
        {
            <tr>
                <td>1</td>
                <td>@Html.DisplayFor(modelitem=>offer.Description)</td>
                <td>@Html.DisplayFor(modelitem => offer.Salary)</td>
                <td><button class="btn btn-danger">Wybierz</button></td>
            </tr>
        }
    </table>
    <button class="btn btn-info">Edytuj dane</button>
</div>

