@model WeddingPlannerProject.Models.WeddingOfferViewModel
@{
    ViewBag.Title = "Zarejestruj";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("BookDate", "Wedding", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />

    <div class="form-group">
        @Html.LabelFor(m => m.Wedding.Date, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Wedding.Date, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Wedding.NumberOfGuests, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Wedding.NumberOfGuests, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Wedding.LocationOfWedding, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Wedding.LocationOfWedding, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Zarejestruj" />
        </div>
    </div>




    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>L.p</th>
                    <th>Opis</th>
                    <th>Cena</th>
                    <th>Wybierz</th>
                </tr>
            </thead>
            @for (int i= 0; i<Model.Offer.Count; i++)
            {
            <tr>
                <td>@(i + 1)</td>
                <td>@Html.CheckBoxFor(m => m.Offer[i].IsChecked)</td>
                <td>@Html.DisplayFor(m => m.Offer[i].Description)</td>
                <td>@Html.DisplayFor(m => m.Offer[i].Salary)</td>
                @Html.HiddenFor(m => m.Offer[i].Id)
            </tr>
            }
        </table>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
