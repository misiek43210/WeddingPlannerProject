@model WeddingPlannerProject.Models.TaskModel
@using (Html.BeginForm("AddTask", "Task", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <h4>Dodaj nowe zadanie!</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
   
        @Html.LabelFor(m => m.Status, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Status, new[]{
new SelectListItem(){Text="Ukonczone" },
new SelectListItem(){Text="Zaplanowane"},
new SelectListItem(){Text="W trakcie"}}, "Wybierz opcję!")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Dodaj!" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}