@model WeddingPlannerProject.Models.UsersViewModel
@{
    /**/

    ViewBag.Title = "ChangeUser";
}

    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>L.p</th>
                    <th>Imie</th>
                    <th>Nazwisko</th>
                    <th>Email</th>
                    <th>Akcja</th>
                </tr>
            </thead>

            @foreach (var users in Model.Users)
            {
                <tr>
                    <td></td>
                    <td>@users.FirstName</td>
                    <td>@users.LastName</td>
                    <td>@users.Email</td>                   
                    <td>
                        @using (Html.BeginForm("RemoveUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.Hidden("UserNameToDelete", users.Id )
                            <input type="submit" class="btn btn-danger" value="Usun" />
                        }
                        </td>
                </tr>
            }

        </table>
    </div>
}

