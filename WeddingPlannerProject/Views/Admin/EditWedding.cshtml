@model WeddingPlannerProject.Models.WeddingViewModels

@{
    ViewBag.Title = "EditWedding";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Potwierdź wesele!</h2>

<div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Liczba gosci</th>
                    <th>Lokalizacja</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tr>
                <td>@Model.Date</td>
                <td>@Model.NumberOfGuests</td>
                <td>@Model.LocationOfWedding</td>
                <td>
                    @{
                    if (Model.IsConfirmed)
                    {
                        <span class="label label-success">Potwierdzone!</span>
                }

                else
                {
                    <span class="label label-danger">Niepotwierdzone!</span>
            }
                    }
                </td>
            </tr>
        </table>

        @using (Html.BeginForm("ConfirmWedding", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
         {
            @Html.Hidden("WeddingId", Model.Id)
            @Html.Hidden("Confirmed", true)       
        <div class="form-group text-center">
            <div class="text-center">
                <input type="submit" class="btn btn-success btn-lg" value="Zatwierdź wesele!" />
            </div>
        </div>
          }

    </div>
    </div>
          

